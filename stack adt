#include<stdio.h>
#include<stdlib.h>
#define max 100
struct stackAdt{
    int st[max];
    int *top,*ptr;
    int size;
    }o;
void inp()
{
    printf("Enter the sizze of stack");
    scanf("%d",&o.size);
      o.ptr=(int*)malloc((o.size)*sizeof(int));
    printf("Enter elements of stack");
    for(int i=0;i<o.size;i++)
{
        scanf("%d",&o.ptr[i]);
        
}
disp();
}
void disp()
{
    for(int i=0;i<o.size;i++)
    {
        printf("%d \t",o.ptr[i]);
    }
}
void push()
{ 
    
     int val;
    o.ptr=(int*)realloc(o.ptr,(o.size+1)*sizeof(int));
    printf("enter element to be pushed");
    scanf("%d",&val);
    o.size=o.size+1; 
    o.ptr[o.size-1]=val;
    disp();
    
}


void main()
{
    inp();
    push();
}
